.column {
  overflow: hidden;
  
  > header {
    padding: 12px 24px 24px;
    user-select: none;
    display: flex;
    align-items: flex-end;
    position: relative;
    transition: 225ms ease-in-out;
    z-index: 2;
    
    &.on {
      z-depth-6dp();
    }
    
    .title {
      font-size: 1.25em;
      font-weight: 500;
      margin: 0;
      margin-left: 8px;
      transition: 225ms;
      position: relative;
      white-space: nowrap;
      
      &:before {
        content: '';
        position: absolute;
        left: -6px;
        height: 100%;
        width: calc(100% + 12px);
        transform: scaleY(0);
        transform-origin: bottom;
        pointer-events: none;
        transition: 225ms;
        z-index: -1;
      }
      
      &:hover {
        color: md-light-text-primary;
        
        &:before {
          transform: scaleY(1);
        }
      }
      
      @media (max-width: 768px) {
        font-size: 1em;
      }
    }
    
    .top {
      position: relative;
      color: md-dark-text-secondary;
      font-size: .875em;
      line-height: 1.25em;
      transition: 125ms;
      white-space: nowrap;
      background: none;
      outline: 0;
      border: 0;
      cursor: pointer;
      padding: 0;
      font-family: 'Noto Sans SC', 'Microsoft YaHei UI', 'Microsoft YaHei UI Light', '微软雅黑', 'Segoe UI Semibold', 'Roboto', sans-serif;
      
      &:hover {
        color: md-dark-text-primary;
      }
      
      &:before {
        content: '↑'
        position: absolute;
        right: -10px;
        bottom: 0;
        font-size: .675em;
        font-weight: 700;
      }
    }
    
    &:before {
      content: '';
      height: 6px;
      width: 6px;
      position: absolute;
      left: 16px;
      top: 44%;
      transform: translateY(-50%);
      pointer-events: none;
    }
    
    &:after {
      content: '';
      height: 18px;
      width: calc(100% - 24px);
      position: absolute;
      left: 16px + 3px + .5px;
      top: 44%;
      pointer-events: none;
    }
  }
  
  @import "card-list.styl"
  
  &:last-child {
    border-right: none;
  }
}

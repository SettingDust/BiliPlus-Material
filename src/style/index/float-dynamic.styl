#float-dynamic {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  align-items: center;
  justify-content: center;
  padding: 16px;
  box-sizing: border-box;
  display: flex;
  opacity: 0;
  
  .mask {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.32);
    z-index: -1;
    cursor: pointer;
  }
  
  .card.dynamic {
    width: 600px;
    max-height: 100%;
    height: fit-content;
    z-depth-2dp();
    
    @media (max-width: 768px) {
      width: 100%;
    }
    
    header {
      transition: 225ms ease-in-out;
      z-index: 11;
      
      .top {
        opacity: 0;
        pointer-events: none;
        transition: inherit;
      }
      
      &.on {
        z-depth-3dp();
        
        .top {
          opacity: 1;
          pointer-events: all;
        }
      }
    }
    
    footer {
      .actions {
        box-shadow: 0 -1px rgba(0, 0, 0, .12)
        display: flex;
        
        .btn {
          width: 100%;
          box-shadow: 1px 0 rgba(0, 0, 0, .12)
          border-radius: 0;
          
          .material-icons {
            width: fit-content;
            margin-right: 4px;
            margin-left: 4px;
          }
          
          .number {
            text-align: center;
            width: 100%;
            color: md-grey-900;
          }
          
          &:hover {
            background-color: md-grey-100;
          }
        }
      }
    }
    
    .pictures {
      .picture {
        max-height: unset;
      }
    }
    
    &:hover {
      z-depth-6dp();
    }
  }
}